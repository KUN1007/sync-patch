// VNDB game release list
model patch_release {
  id          Int      @id @default(autoincrement())

  patch_id    Int
  patch       patch    @relation(fields: [patch_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  rid         String  @unique @db.VarChar(16)
  title       String  @db.VarChar(1007)
  released    String  @db.VarChar(107) @default("2019-10-07")
  platforms   String[]
  languages   String[]
  minage      Int @default(0)

  created     DateTime @default(now())
  updated     DateTime @updatedAt

  @@index([patch_id])
  @@index([released])
}

